{
    "version": 8,
    "configurePresets": [
        {
            "name": "GCC",
            "displayName": "GCC 12.2.0 x86_64-linux-gnu",
            "description": "Использование компиляторов: C = /usr/bin/gcc, CXX = /usr/bin/g++",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "clang",
            "displayName": "Clang 19.1.4 x86_64-pc-linux-gnu",
            "description": "Использование компиляторов: C = /usr/bin/clang-19, CXX = /usr/bin/clang++-19",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_C_COMPILER": "/usr/bin/clang-19",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++-19",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}